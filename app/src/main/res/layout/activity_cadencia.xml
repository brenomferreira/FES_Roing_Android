                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textView_Freq"
                        android:layout_toRightOf="@+id/btn_menos_Freq"
                        android:gravity="center"
                        android:hint="Valor.."
