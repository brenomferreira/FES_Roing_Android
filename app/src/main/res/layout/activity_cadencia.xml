                    <Button
                        android:id="@+id/btn_mais_Freq"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/btn_menos_Freq"
                        android:layout_toRightOf="@+id/editText_Freq"
                        android:text="+" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
